@model PracticalTraining.Models.DatabaseMANKA.StaffInfo

@section menu
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Owner" asp-action="Index">На главную</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Выйти</a>
    </li>
}

<h1>Редактирование</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StaffPhone" />
            <input type="hidden" asp-for="StaffPassword" />
            <div class="form-group">
                <label asp-for="PassportSeries" class="control-label"><text>Серия паспорта</text></label>
                <input asp-for="PassportSeries" class="form-control" />
                <span asp-validation-for="PassportSeries" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassportNumber" class="control-label"><text>Номер паспорта</text></label>
                <input asp-for="PassportNumber" class="form-control" />
                <span asp-validation-for="PassportNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Snils" class="control-label"><text>СНИЛС</text></label>
                <input asp-for="Snils" class="form-control" />
                <span asp-validation-for="Snils" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentPerHour" class="control-label"><text>Почасовая оплата</text></label>
                <input asp-for="PaymentPerHour" class="form-control" />
                <span asp-validation-for="PaymentPerHour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffFamilyName" class="control-label"><text>Фамилия</text></label>
                <input asp-for="StaffFamilyName" class="form-control" />
                <span asp-validation-for="StaffFamilyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffName" class="control-label"><text>Имя</text></label>
                <input asp-for="StaffName" class="form-control" />
                <span asp-validation-for="StaffName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffSurname" class="control-label"><text>Отчество</text></label>
                <input asp-for="StaffSurname" class="form-control" />
                <span asp-validation-for="StaffSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
        <a asp-action="Index"><text>Назад</text></a>
</div>

@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
