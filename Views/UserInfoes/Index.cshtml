@model List<UserInfo>

@section menu
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Owner" asp-action="Index">На главную</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Выйти</a>
    </li>
}

<h1>Управление паролями</h1>
<br/>

<form method="post">
    <table>
        <tr>
            <th>
                <text>Поиск:    </text>
            </th>
            <th>
                <input name="searchString"/>
            </th>
            <th>
                <button class="btn-secondary">Поиск</button>
            </th>
        <tr/>
    </table>
</form>
<br/>


<table class="table">
    <thead>

        <tr>
            <th> 
                @Html.ActionLink("Логин", "Index", new { sortOrder=ViewBag.LoginSortParm })
            </th>
            <th>
                @Html.ActionLink("Пароль", "Index", new { sortOrder=ViewBag.PasswordSortParm })
            </th>
            <th>
                @Html.ActionLink("Уровень доступа", "Index", new { sortOrder=ViewBag.AccessLevelSortParm })
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserLogin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserPassword)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccessLevel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserID">Изменить</a>
            </td>
        </tr>
}
    </tbody>
</table>
