@model UserInfo

@section menu
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Owner" asp-action="Index">На главную</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Выйти</a>
    </li>
}

<h1>Редактирование</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="AccessLevel" class="control-label"><text>Уровень доступа</text></label>
                <input hidden asp-for="AccessLevel" class="form-control" />
                <input disabled="disabled" asp-for="AccessLevel" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="UserLogin" class="control-label"><text>Логин</text></label>
                <input hidden asp-for="UserLogin" class="form-control" />           
                <script>
                    jQuery(function($) {
                    $("input[name=login]").mask("+7(999) 999-99-99");
                  });
                </script>
                <input disabled="disabled" asp-for="UserLogin" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="UserPassword" class="control-label"><text>Пароль</text></label>
                <input asp-for="UserPassword" class="form-control" />
                <span asp-validation-for="UserPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><text>Назад</text></a>
</div>

@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
