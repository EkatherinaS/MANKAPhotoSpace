@model MainPageViewModel

@section menu
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Guest" asp-action="Edit">@Model.GuestName</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Guest" asp-action="Index">На главную</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Guest" asp-action="Reservations">Бронирования</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Выйти</a>
    </li>
}

<body>
    <main>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                @for(int i = 1; i<Model.Imgs.Length; i++)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to=@i.ToString()></li>
                }
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src=@Url.Content(@Model.Imgs[0]) alt="First slide">
                </div>
                @for(int i = 1; i<Model.Imgs.Length; i++)
                {
                    <div class="carousel-item">
                    <img class="d-block w-100" src=@Url.Content(@Model.Imgs[i]) alt="Other slide">
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
            </a>
        </div>

        <h1></h1>

        <div class="row">
            <div class="col-md-9">
                <h2>@Model.BaseText</h2>
            </div>
            <div class="col-md-3">
                <a href="/Guest/Reservation" class="btn btn-lg btn-secondary"><text>Забронировать</text></a>
            </div>
        </div>

        
        <ul style="list-style-type:none;">
            @foreach(string line in @Model.ListText)
            {
                <li>@line</li>
            }
        </ul>
    </main>
</body>

