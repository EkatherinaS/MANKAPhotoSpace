@model PracticalTraining.Models.DatabaseMANKA.ServiceInfo

@section menu
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Owner" asp-action="Index">На главную</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Выйти</a>
    </li>
}

<h1>Удалить услугу?</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-5">
            <text>Название услуги</text>
        </dt>
        <dd class = "col-sm-7">
            <text>@Html.DisplayFor(model => model.ServiceName)</text>
        </dd>
        <dt class = "col-sm-5">
            <text>Цена</text>
        </dt>
        <dd class = "col-sm-7">
            <text>@Html.DisplayFor(model => model.ServicePrice)</text>
        </dd>
        <dt class = "col-sm-5">
            <text>Дата прекращения предоставления</text>
        </dt>
        <dd class = "col-sm-7">
            <text>@Html.DisplayFor(model => model.DateExploration)</text>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ServiceCode" />
        <input type="submit" value="Удалить" class="btn btn-secondary" /> |
        <a asp-action="Index"><text>Назад</text></a>
    </form>
</div>
